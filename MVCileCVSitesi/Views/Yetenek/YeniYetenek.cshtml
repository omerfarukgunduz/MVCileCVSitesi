@model MVCileCVSitesi.Models.Entity.Tbl_Yeteneklerim

@{
    ViewBag.Title = "YeniYetenek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Yetenek Ekleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Yetenek Açıklaması")
    @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control", placeholder = "Yetenek açıklamasını girin" })
    <br />
    @Html.Label("Derece")
    @Html.TextBoxFor(x => x.Oran, new { @class = "form-control", placeholder = "Dereceyi girin. (0-100 arası)" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
